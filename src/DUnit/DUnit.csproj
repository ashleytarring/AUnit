<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>DUnit</PackageId>
    <IncludeBuildOutput>true</IncludeBuildOutput>
    <IncludeContentInPack>true</IncludeContentInPack>
    <Version>0.0.3</Version>
    <Authors>AshleyTarring</Authors>
    <!-- <Company>YourCompany</Company> -->
    <Description>A C# Unit Testing Framework, By Testers for Testers.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <!-- <PackageProjectUrl>https://yourprojecturl.com</PackageProjectUrl> -->
    <RepositoryUrl>https://github.com/ashleytarring/DUnit</RepositoryUrl>
    <PackageTags>.NET 8.0</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\DUnit.Adapter\DUnit.Adapter.csproj" />
    <ProjectReference Include="..\DUnit.Core\DUnit.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="..\DUnit.Core\bin\$(Configuration)\$(TargetFramework)\DUnit.Core.dll">
      <Pack>true</Pack>
      <PackagePath>lib\$(TargetFramework)\</PackagePath>
    </None>
    <None Update="..\DUnit.Adapter\bin\$(Configuration)\$(TargetFramework)\DUnit.Adapter.dll">
      <Pack>true</Pack>
      <PackagePath>lib\$(TargetFramework)\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\"/>
  </ItemGroup>

</Project>
